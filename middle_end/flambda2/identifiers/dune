(include_subdirs unqualified)

(library
 (name flambda2_identifiers)
 (wrapped true)
 (instrumentation (backend bisect_ppx))
 (flags
  (:standard
   -principal
   -open
   Flambda2_algorithms
   -open
   Flambda2_kinds
   -open
   Flambda2_numbers
   -open
   Flambda2_ui))
 (ocamlopt_flags
  (:standard -O3))
 (libraries
  ocamlcommon
  flambda2_algorithms
  flambda2_kinds
  flambda2_numbers
  flambda2_ui
  flambda2_identifiers_deps)
 (modules :standard \ flambda2_identifiers_deps))

; Hacky workaround for having two modules called Symbol
(library
 (name flambda2_identifiers_deps)
 (instrumentation (backend bisect_ppx))
 (ocamlopt_flags
  (:standard -O3))
 (libraries ocamlcommon)
 (modules flambda2_identifiers_deps))
